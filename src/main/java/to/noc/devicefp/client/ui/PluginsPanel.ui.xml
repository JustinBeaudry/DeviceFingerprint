<ui:UiBinder    xmlns:ui="urn:ui:com.google.gwt.uibinder"
                xmlns:g="urn:import:com.google.gwt.user.client.ui"
                >
    <ui:style type="to.noc.devicefp.client.ui.PluginsPanel.Style">
        
        .oddPlugin {
            background-color: #E0EDFE;
        }
        
        .oddPlugin td {
            border-style: solid;
            border-color: #E0EDFE;
        }
        
        .pluginsTable {
            border-collapse: collapse;
        }
        
        .pluginsTable td {
            padding: 3px;
        }
        
    </ui:style>

    <g:SimplePanel>
        <g:FlexTable ui:field="table" styleName="{style.pluginsTable}"/>
    </g:SimplePanel>
    
</ui:UiBinder>
